

        {{#if error}}
        <div>
            <div class="errorContainer">
                <p>{{error}}</p>
            </div>
        </div>
        {{/if}}
        <section id="create-container">
            <div class="create-container-info">
                <h1>Create Volcano Wiki</h1>
                <form method="POST">
                    <label>Name:</label>
                    <input type="text" id="name" name="name" placeholder="..." value="{{name}}">
                    <label>Location:</label>
                    <input type="text" id="location" name="location" placeholder="..." value="{{location}}">
                    <label>Elevation:</label>
                    <input type="number" id="elevations" name="elevation" placeholder="..." value="{{elevation}}">
                    <label>Year of Last Eruption:</label>
                    <input type="number" id="last-year-eruption" name="lastEruption" placeholder="..." value="{{lastEruption}}">
                    <label>Image:</label>
                    <input type="text" id="image" name="image" placeholder="http://..." value="{{image}}">
                    <label>Volcano Type:</label>
                    <select id="type" name="typeVolcano" >
                        <option value="Supervolcanoes">Supervolcanoes</option>
                        <option value="Submarine">Submarine</option>
                        <option value="Subglacial">Subglacial</option>
                        <option value="Mud">Mud</option>
                        <option value="Stratovolcanoes">Stratovolcanoes</option>
                        <option value="Shield">Shield</option>
                    </select>
                    <label>Description:</label>
                    <textarea id="description" name="description" placeholder="..."></textarea>
                    <input type="submit" id="btn" value="Submit"></input>
                </form>
            </div>
        </section>
