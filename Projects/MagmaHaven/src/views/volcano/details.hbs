<section id="details-info">
    <h1>Details</h1>
    <div class="volcano-image">
        <img src="{{image}}">
    </div>

    <div class="volcano-info">
        <div class="volcano-text">
            <h1 id="name">{{volcano.name}}</h1>
            <h3 id="location">Location: {{volcano.location}}</h3>
            <p id="type">Volcano Type: {{volcano.typeVolcano}}</p>
            <p id="elevation"><span>Elevation: {{volcano.elevation}}m</span></p>
            <p id="last-eruption">Year of Last Eruption: {{volcano.lastEruption}}</p>
            <p id="votes">Vote's Count: {{volcano.voteList.length}}</p>
            <p id="description">{{volcano.description}}</p>
        </div>
        {{#if isAuthenticated}}
            <div class="product-btn">
                {{#if isOwner}}
                    <div class="author">
                        <a href="#" class="btn-edit">Edit</a>
                        <a href="/volcano/{{volcano._id}}/delete" class="btn-delete">Delete</a>
                    </div>

                {{else}}
                    {{#if isUserInVoteList}}
                        <p class="vote-message">You've already voted for this volcano!</p>

                    {{else}}
                        <a href="/volcano/{{volcano._id}}/vote" class="btn-vote">Vote</a>

                    {{/if}}
                {{/if}}
            </div>
        {{/if}}
    </div>
</section>
